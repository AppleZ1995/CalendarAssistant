    <div class="page-title">üíµ Money Manager</div>

    <div class="container">
      <!-- Summary Stats -->
      <div class="summary-grid">
        <div class="stat-card income">
          <div class="stat-label">Total Income</div>
          <div class="stat-value" id="totalIncome">0.00</div>
          <small class="text-muted" id="incomeCount">0 entries</small>
        </div>
        <div class="stat-card debt">
          <div class="stat-label">Total Debt</div>
          <div class="stat-value" id="totalDebt">0.00</div>
          <small class="text-muted" id="debtCount">0 entries</small>
        </div>
        <div class="stat-card consumption">
          <div class="stat-label">Total Consumption</div>
          <div class="stat-value" id="totalConsumption">0.00</div>
          <small class="text-muted" id="consumptionCount">0 entries</small>
        </div>
        <div class="stat-card savings">
          <div class="stat-label">Net Balance</div>
          <div class="stat-value" id="netBalance">0.00</div>
          <small class="text-muted">Income - Debt - Consumption</small>
        </div>
      </div>

      <!-- Charts -->
      <div class="money-card">
        <h5>üìä Financial Overview</h5>
        <div class="row">
          <div class="col-md-6">
            <div class="chart-container">
              <canvas id="distributionChart"></canvas>
            </div>
          </div>
          <div class="col-md-6">
            <div class="chart-container">
              <canvas id="categoryChart"></canvas>
            </div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h6 class="mb-0">üìà Trends (Curve)</h6>
              <div>
                <label class="me-2 text-muted">Range:</label>
                <select id="trendRange" class="form-select d-inline-block" style="width:120px">
                  <option value="7">7 days</option>
                  <option value="14">14 days</option>
                  <option value="30" selected>30 days</option>
                  <option value="90">90 days</option>
                </select>
              </div>
            </div>
            <div class="chart-container">
              <canvas id="trendChart"></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- Add Money Record Form -->
      <div class="money-card">
        <h5>‚ûï Add Money Record</h5>
        <ul class="nav nav-tabs mb-3">
          <li class="nav-item">
            <button class="tab-btn active" onclick="switchTab('income')">üíµ Income</button>
          </li>
          <li class="nav-item">
            <button class="tab-btn" onclick="switchTab('debt')">üí≥ Debt</button>
          </li>
          <li class="nav-item">
            <button class="tab-btn" onclick="switchTab('consumption')">üõí Consumption</button>
          </li>
          <li class="nav-item">
            <button class="tab-btn" onclick="switchTab('savings')">üè¶ Savings</button>
          </li>
        </ul>

        <!-- Income Form -->
        <div id="income-form" class="tab-content active">
          <div class="form-section">
            <h6>Add Income</h6>
            <div class="row">
              <div class="col-md-3">
                <input type="text" class="form-control" id="incomeTitle" placeholder="Income source (e.g., Salary, Bonus)">
              </div>
              <div class="col-md-2">
                <input type="number" class="form-control" id="incomeAmount" placeholder="Amount" step="0.01" min="0">
              </div>
              <div class="col-md-2">
                <select class="form-control" id="incomeCurrency">
                  <option value="USD">USD</option>
                  <option value="EUR">EUR</option>
                  <option value="GBP">GBP</option>
                  <option value="CNY">CNY</option>
                  <option value="JPY">JPY</option>
                </select>
              </div>
              <div class="col-md-3">
                <input type="date" class="form-control" id="incomeDate">
              </div>
              <div class="col-md-2">
                <button class="btn btn-primary w-100" onclick="addMoney('income')">Add</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Debt Form -->
        <div id="debt-form" class="tab-content">
          <div class="form-section">
            <h6>Add Debt</h6>
            <div class="row">
              <div class="col-md-3">
                <input type="text" class="form-control" id="debtTitle" placeholder="Debt type (e.g., Loan, Credit)">
              </div>
              <div class="col-md-2">
                <input type="number" class="form-control" id="debtAmount" placeholder="Amount" step="0.01" min="0">
              </div>
              <div class="col-md-2">
                <select class="form-control" id="debtCurrency">
                  <option value="USD">USD</option>
                  <option value="EUR">EUR</option>
                  <option value="GBP">GBP</option>
                  <option value="CNY">CNY</option>
                  <option value="JPY">JPY</option>
                </select>
              </div>
              <div class="col-md-3">
                <input type="date" class="form-control" id="debtDate">
              </div>
              <div class="col-md-2">
                <button class="btn btn-primary w-100" onclick="addMoney('debt')">Add</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Consumption Form -->
        <div id="consumption-form" class="tab-content">
          <div class="form-section">
            <h6>Add Consumption</h6>
            <div class="row">
              <div class="col-md-3">
                <input type="text" class="form-control" id="consumptionTitle" placeholder="Item/Category">
              </div>
              <div class="col-md-2">
                <input type="number" class="form-control" id="consumptionAmount" placeholder="Amount" step="0.01" min="0">
              </div>
              <div class="col-md-2">
                <select class="form-control" id="consumptionCurrency">
                  <option value="USD">USD</option>
                  <option value="EUR">EUR</option>
                  <option value="GBP">GBP</option>
                  <option value="CNY">CNY</option>
                  <option value="JPY">JPY</option>
                </select>
              </div>
              <div class="col-md-3">
                <input type="date" class="form-control" id="consumptionDate">
              </div>
              <div class="col-md-2">
                <button class="btn btn-primary w-100" onclick="addMoney('consumption')">Add</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Savings Form -->
        <div id="savings-form" class="tab-content">
          <div class="form-section">
            <h6>Add Savings</h6>
            <div class="row">
              <div class="col-md-3">
                <input type="text" class="form-control" id="savingsTitle" placeholder="Savings goal (e.g., Emergency Fund)">
              </div>
              <div class="col-md-2">
                <input type="number" class="form-control" id="savingsAmount" placeholder="Amount" step="0.01" min="0">
              </div>
              <div class="col-md-2">
                <select class="form-control" id="savingsCurrency">
                  <option value="USD">USD</option>
                  <option value="EUR">EUR</option>
                  <option value="GBP">GBP</option>
                  <option value="CNY">CNY</option>
                  <option value="JPY">JPY</option>
                </select>
              </div>
              <div class="col-md-3">
                <input type="date" class="form-control" id="savingsDate">
              </div>
              <div class="col-md-2">
                <button class="btn btn-primary w-100" onclick="addMoney('savings')">Add</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Records List -->
      <div class="money-card">
        <h5>üìù All Records</h5>
        <div id="moneyList">
          <div class="empty-state">
            <div class="empty-state-icon">üìã</div>
            <p>No money records yet. Start by adding your first income, debt, consumption, or savings!</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      let moneyData = [];
      let charts = {};

      // Initialize
      document.addEventListener('DOMContentLoaded', () => {
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('incomeDate').value = today;
        document.getElementById('debtDate').value = today;
        document.getElementById('consumptionDate').value = today;
        document.getElementById('savingsDate').value = today;
        
        initCharts();
        loadMoneyRecords();
      });

      // Switch tabs
      function switchTab(type) {
        document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
        document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('active'));
        
        document.getElementById(type + '-form').classList.add('active');
        event.target.classList.add('active');
      }

      // Add money record
      async function addMoney(type) {
        const titleEl = document.getElementById(type + 'Title');
        const amountEl = document.getElementById(type + 'Amount');
        const currencyEl = document.getElementById(type + 'Currency');
        const dateEl = document.getElementById(type + 'Date');

        if (!titleEl.value.trim() || !amountEl.value) {
          alert('Please fill in all fields');
          return;
        }

        const payload = {
          type: type,
          title: titleEl.value.trim(),
          amount: parseFloat(amountEl.value),
          currency: currencyEl.value,
          date: dateEl.value,
          timestamp: new Date().toISOString()
        };

        try {
          const response = await fetch('/api/money', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });

          if (!response.ok) throw new Error('Failed to add record');

          titleEl.value = '';
          amountEl.value = '';
          dateEl.value = new Date().toISOString().split('T')[0];

          loadMoneyRecords();
        } catch (error) {
          console.error('Error adding money record:', error);
          alert('Error adding record');
        }
      }

      // Load money records
      async function loadMoneyRecords() {
        try {
          const response = await fetch('/api/money');
          const result = await response.json();
          
          moneyData = result.data || [];
          updateDisplay();
          updateCharts();
        } catch (error) {
          console.error('Error loading money records:', error);
        }
      }

      // Update display
      function updateDisplay() {
        const moneyList = document.getElementById('moneyList');
        
        if (moneyData.length === 0) {
          moneyList.innerHTML = `
            <div class="empty-state">
              <div class="empty-state-icon">üìã</div>
              <p>No money records yet. Start by adding your first income, debt, consumption, or savings!</p>
            </div>
          `;
          updateStats();
          return;
        }

        moneyList.innerHTML = moneyData.sort((a, b) => new Date(b.date) - new Date(a.date)).map((item, idx) => `
          <div class="money-item">
            <div class="money-item-info">
              <div class="money-item-title">
                ${getTypeEmoji(item.type)} ${item.title}
                <span class="category-badge ${item.type}">${item.type.charAt(0).toUpperCase() + item.type.slice(1)}</span>
              </div>
              <div class="money-item-date">${new Date(item.date).toLocaleDateString()} ‚Ä¢ ${item.currency}</div>
            </div>
            <div class="money-item-amount ${item.type}">
              ${item.type === 'debt' || item.type === 'consumption' ? '-' : '+'}${item.amount.toFixed(2)}
            </div>
            <button class="money-btn money-btn-delete" onclick="deleteRecord(${idx})">Delete</button>
          </div>
        `).join('');

        updateStats();
      }

      // Delete record
      async function deleteRecord(idx) {
        if (confirm('Are you sure you want to delete this record?')) {
          const item = moneyData[idx];
          try {
            const response = await fetch(`/api/money/${idx}`, { method: 'DELETE' });
            if (!response.ok) throw new Error('Failed to delete');
            loadMoneyRecords();
          } catch (error) {
            console.error('Error deleting record:', error);
            alert('Error deleting record');
          }
        }
      }

      // Update stats
      function updateStats() {
        const income = moneyData.filter(m => m.type === 'income').reduce((sum, m) => sum + m.amount, 0);
        const debt = moneyData.filter(m => m.type === 'debt').reduce((sum, m) => sum + m.amount, 0);
        const consumption = moneyData.filter(m => m.type === 'consumption').reduce((sum, m) => sum + m.amount, 0);
        const savings = moneyData.filter(m => m.type === 'savings').reduce((sum, m) => sum + m.amount, 0);

        document.getElementById('totalIncome').textContent = (income + savings).toFixed(2);
        document.getElementById('incomeCount').textContent = (moneyData.filter(m => m.type === 'income').length + moneyData.filter(m => m.type === 'savings').length) + ' entries';
        
        document.getElementById('totalDebt').textContent = debt.toFixed(2);
        document.getElementById('debtCount').textContent = moneyData.filter(m => m.type === 'debt').length + ' entries';
        
        document.getElementById('totalConsumption').textContent = consumption.toFixed(2);
        document.getElementById('consumptionCount').textContent = moneyData.filter(m => m.type === 'consumption').length + ' entries';
        
        const balance = income + savings - debt - consumption;
        const balanceEl = document.getElementById('netBalance');
        balanceEl.textContent = balance.toFixed(2);
        balanceEl.style.color = balance >= 0 ? '#28a745' : '#dc3545';
      }

      // Get type emoji
      function getTypeEmoji(type) {
        const emojis = { income: 'üíµ', debt: 'üí≥', consumption: 'üõí', savings: 'üè¶' };
        return emojis[type] || 'üí∞';
      }

      // Initialize charts
      function initCharts() {
        const distCtx = document.getElementById('distributionChart').getContext('2d');
        charts.distribution = new Chart(distCtx, {
          type: 'doughnut',
          data: {
            labels: ['Income', 'Debt', 'Consumption', 'Savings'],
            datasets: [{
              data: [0, 0, 0, 0],
              backgroundColor: ['#28a745', '#dc3545', '#ffc107', '#17a2b8'],
              borderColor: 'white',
              borderWidth: 2
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: { position: 'bottom' }
            }
          }
        });

        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        charts.category = new Chart(categoryCtx, {
          type: 'bar',
          data: {
            labels: ['Income', 'Debt', 'Consumption', 'Savings'],
            datasets: [{
              label: 'Amount',
              data: [0, 0, 0, 0],
              backgroundColor: ['#28a745', '#dc3545', '#ffc107', '#17a2b8']
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: { display: true }
            },
            scales: {
              y: { beginAtZero: true }
            }
          }
        });

        // Trend (curve) chart
        const trendCtx = document.getElementById('trendChart').getContext('2d');
        charts.trend = new Chart(trendCtx, {
          type: 'line',
          data: {
            labels: [],
            datasets: [
              { label: 'Income', data: [], borderColor: '#28a745', backgroundColor: 'rgba(40,167,69,0.08)', tension: 0.4, fill: true },
              { label: 'Debt', data: [], borderColor: '#dc3545', backgroundColor: 'rgba(220,53,69,0.06)', tension: 0.4, fill: true },
              { label: 'Consumption', data: [], borderColor: '#ffc107', backgroundColor: 'rgba(255,193,7,0.06)', tension: 0.4, fill: true },
              { label: 'Savings', data: [], borderColor: '#17a2b8', backgroundColor: 'rgba(23,162,184,0.06)', tension: 0.4, fill: true }
            ]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { position: 'bottom' } },
            scales: {
              x: { display: true },
              y: { beginAtZero: true }
            }
          }
        });

        // Recompute trends when range changes
        const rangeSelect = document.getElementById('trendRange');
        rangeSelect.addEventListener('change', () => updateCharts());
      }

      // Update charts
      function updateCharts() {
        const income = moneyData.filter(m => m.type === 'income').reduce((sum, m) => sum + m.amount, 0);
        const debt = moneyData.filter(m => m.type === 'debt').reduce((sum, m) => sum + m.amount, 0);
        const consumption = moneyData.filter(m => m.type === 'consumption').reduce((sum, m) => sum + m.amount, 0);
        const savings = moneyData.filter(m => m.type === 'savings').reduce((sum, m) => sum + m.amount, 0);

        const data = [income, debt, consumption, savings];
        charts.distribution.data.datasets[0].data = data;
        charts.distribution.update();

        charts.category.data.datasets[0].data = data;
        charts.category.update();

        // Trend chart (time series over selected range)
        const rangeSelect = document.getElementById('trendRange');
        const days = parseInt(rangeSelect ? rangeSelect.value : 30, 10) || 30;

        // Build array of date labels (YYYY-MM-DD) for last `days` days
        function getLastNDates(n) {
          const arr = [];
          const today = new Date();
          for (let i = n - 1; i >= 0; i--) {
            const d = new Date(today);
            d.setDate(d.getDate() - i);
            arr.push(d.toISOString().split('T')[0]);
          }
          return arr;
        }

        const labels = getLastNDates(days);
        const types = ['income', 'debt', 'consumption', 'savings'];
        const datasetsData = types.map(t => labels.map(label => {
          return moneyData.filter(m => m.type === t && m.date === label).reduce((s, m) => s + m.amount, 0);
        }));

        // Assign data to trend chart
        if (charts.trend) {
          charts.trend.data.labels = labels.map(l => {
            // friendly label: month/day for readability
            const d = new Date(l);
            return `${d.getMonth()+1}/${d.getDate()}`;
          });
          charts.trend.data.datasets[0].data = datasetsData[0];
          charts.trend.data.datasets[1].data = datasetsData[1];
          charts.trend.data.datasets[2].data = datasetsData[2];
          charts.trend.data.datasets[3].data = datasetsData[3];
          charts.trend.update();
        }
      }
