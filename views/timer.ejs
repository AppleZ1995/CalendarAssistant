    <style>
      body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
      }

      .timer-container {
        max-width: 500px;
        margin: 50px auto;
      }

      .timer-display {
        background: white;
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        margin-bottom: 2rem;
      }

      .timer-time {
        font-size: 5rem;
        font-weight: bold;
        color: #667eea;
        font-family: 'Courier New', monospace;
        margin: 20px 0;
        letter-spacing: 10px;
      }

      .timer-status {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 2px;
      }

      .timer-session {
        font-size: 0.9rem;
        color: #999;
      }

      .timer-controls {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-bottom: 20px;
      }

      .timer-btn {
        padding: 12px 30px;
        font-size: 1rem;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .timer-btn-start {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        flex: 1;
      }

      .timer-btn-start:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
      }

      .timer-btn-pause {
        background: #ffc107;
        color: #333;
        flex: 1;
      }

      .timer-btn-reset {
        background: #dc3545;
        color: white;
        flex: 1;
      }

      .timer-settings {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        margin-bottom: 2rem;
      }

      .settings-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
        align-items: center;
      }

      .settings-group {
        flex: 1;
      }

      .settings-group label {
        display: block;
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .settings-group input {
        width: 100%;
        padding: 10px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: bold;
      }

      .progress-ring {
        transform: rotate(-90deg);
        transform-origin: 50% 50%;
      }

      .progress-ring-circle {
        transition: stroke-dashoffset 0.35s;
        stroke: #667eea;
        fill: transparent;
        stroke-linecap: round;
      }

      .stats-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      }

      .stats-value {
        font-size: 2rem;
        font-weight: bold;
        color: #667eea;
      }

      .stats-label {
        font-size: 0.9rem;
        color: #999;
        margin-top: 5px;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .session-list {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      }

      .session-item {
        padding: 15px 0;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .session-item:last-child {
        border-bottom: none;
      }

      .session-time {
        color: #667eea;
        font-weight: bold;
      }

      .session-date {
        font-size: 0.85rem;
        color: #999;
      }

      .navbar {
        background: rgba(255, 255, 255, 0.95) !important;
        backdrop-filter: blur(10px);
      }

      .page-title {
        color: white;
        text-align: center;
        margin-top: 30px;
        margin-bottom: 20px;
        font-size: 2.5rem;
        font-weight: bold;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
      }
    </style>
</head>
<body>
