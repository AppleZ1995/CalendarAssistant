    <div class="page-title">‚è±Ô∏è Pomodoro Timer</div>

    <div class="timer-container">
      <!-- Main Timer Display -->
      <div class="timer-display">
        <div class="timer-status" id="timerStatus">FOCUS TIME</div>
        <div class="timer-time" id="timerDisplay">25:00</div>
        <div class="timer-session">
          <span id="sessionNumber">Session 1</span> ‚Ä¢ 
          <span id="sessionType">Work</span>
        </div>
      </div>

      <!-- Settings -->
      <div class="timer-settings">
        <h5 class="mb-3">‚öôÔ∏è Settings</h5>
        <div class="settings-row">
          <div class="settings-group">
            <label>Work Duration (min)</label>
            <input type="number" id="workDuration" value="25" min="1" max="60">
          </div>
          <div class="settings-group">
            <label>Break Duration (min)</label>
            <input type="number" id="breakDuration" value="5" min="1" max="30">
          </div>
          <div class="settings-group">
            <label>Long Break (min)</label>
            <input type="number" id="longBreakDuration" value="15" min="1" max="60">
          </div>
        </div>
      </div>

      <!-- Controls -->
      <div class="timer-controls">
        <button class="timer-btn timer-btn-start" id="startBtn">‚ñ∂ Start</button>
        <button class="timer-btn timer-btn-pause" id="pauseBtn" style="display: none;">‚è∏ Pause</button>
        <button class="timer-btn timer-btn-reset" id="resetBtn">‚Üª Reset</button>
      </div>

      <!-- Stats -->
      <div class="row mb-4">
        <div class="col-6">
          <div class="stats-card">
            <div class="stats-value" id="totalSessions">0</div>
            <div class="stats-label">Sessions Today</div>
          </div>
        </div>
        <div class="col-6">
          <div class="stats-card">
            <div class="stats-value" id="totalMinutes">0</div>
            <div class="stats-label">Minutes Focused</div>
          </div>
        </div>
      </div>

      <!-- Session History -->
      <div class="session-list">
        <h5 class="mb-3">üìã Today's Sessions</h5>
        <div id="sessionHistory">
          <p class="text-muted text-center">No sessions completed yet</p>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      // Timer state
      let timerState = {
        isRunning: false,
        timeRemaining: 25 * 60, // 25 minutes in seconds
        workDuration: 25 * 60,
        breakDuration: 5 * 60,
        longBreakDuration: 15 * 60,
        sessionCount: 0,
        isWorkSession: true,
        sessions: []
      };

      let timerInterval = null;

      // DOM elements
      const timerDisplay = document.getElementById('timerDisplay');
      const timerStatus = document.getElementById('timerStatus');
      const sessionNumber = document.getElementById('sessionNumber');
      const sessionType = document.getElementById('sessionType');
      const startBtn = document.getElementById('startBtn');
      const pauseBtn = document.getElementById('pauseBtn');
      const resetBtn = document.getElementById('resetBtn');
      const workDurationInput = document.getElementById('workDuration');
      const breakDurationInput = document.getElementById('breakDuration');
      const longBreakDurationInput = document.getElementById('longBreakDuration');
      const totalSessionsDisplay = document.getElementById('totalSessions');
      const totalMinutesDisplay = document.getElementById('totalMinutes');
      const sessionHistoryDiv = document.getElementById('sessionHistory');

      // Format time display
      function formatTime(seconds) {
        const mins = Math.floor(seconds / 60);
        const secs = seconds % 60;
        return `${String(mins).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
      }

      // Update display
      function updateDisplay() {
        timerDisplay.textContent = formatTime(timerState.timeRemaining);
        timerStatus.textContent = timerState.isWorkSession ? 'FOCUS TIME' : 'BREAK TIME';
        sessionType.textContent = timerState.isWorkSession ? 'Work' : 'Break';
        sessionNumber.textContent = `Session ${timerState.sessionCount + 1}`;
      }

      // Tick timer
      function tick() {
        if (timerState.timeRemaining > 0) {
          timerState.timeRemaining--;
          updateDisplay();
        } else {
          completeSession();
        }
      }

      // Complete session
      function completeSession() {
        const now = new Date();
        const sessionData = {
          type: timerState.isWorkSession ? 'Work' : 'Break',
          duration: timerState.isWorkSession ? timerState.workDuration : (timerState.sessionCount % 4 === 3 ? timerState.longBreakDuration : timerState.breakDuration),
          time: now.toLocaleTimeString()
        };
        
        timerState.sessions.push(sessionData);
        
        // Play notification sound
        playNotification();
        
        // Show notification
        showNotification(timerState.isWorkSession ? 'Work session complete! Take a break.' : 'Break complete! Ready for another session?');

        // Switch to next session
        if (timerState.isWorkSession) {
          timerState.isWorkSession = false;
          // Every 4th break is long break
          if (timerState.sessionCount % 4 === 3) {
            timerState.timeRemaining = timerState.longBreakDuration;
          } else {
            timerState.timeRemaining = timerState.breakDuration;
          }
        } else {
          timerState.isWorkSession = true;
          timerState.sessionCount++;
          timerState.timeRemaining = timerState.workDuration;
        }

        pauseTimer();
        updateDisplay();
        updateStats();
        updateSessionHistory();
      }

      // Play notification
      function playNotification() {
        // Create a simple beep using Web Audio API
        const audioContext = new (window.AudioContext || window.webkitAudioContext)();
        const oscillator = audioContext.createOscillator();
        const gainNode = audioContext.createGain();

        oscillator.connect(gainNode);
        gainNode.connect(audioContext.destination);

        oscillator.frequency.value = 800;
        oscillator.type = 'sine';

        gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
        gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.5);

        oscillator.start(audioContext.currentTime);
        oscillator.stop(audioContext.currentTime + 0.5);
      }

      // Show browser notification
      function showNotification(message) {
        if ('Notification' in window && Notification.permission === 'granted') {
          new Notification('Pomodoro Timer', { body: message });
        } else if ('Notification' in window && Notification.permission !== 'denied') {
          Notification.requestPermission().then(permission => {
            if (permission === 'granted') {
              new Notification('Pomodoro Timer', { body: message });
            }
          });
        }
      }

      // Start timer
      function startTimer() {
        if (!timerState.isRunning) {
          timerState.isRunning = true;
          startBtn.style.display = 'none';
          pauseBtn.style.display = 'block';
          timerInterval = setInterval(tick, 1000);
        }
      }

      // Pause timer
      function pauseTimer() {
        timerState.isRunning = false;
        clearInterval(timerInterval);
        startBtn.style.display = 'block';
        pauseBtn.style.display = 'none';
      }

      // Reset timer
      function resetTimer() {
        pauseTimer();
        timerState.timeRemaining = timerState.isWorkSession ? timerState.workDuration : timerState.breakDuration;
        updateDisplay();
      }

      // Update stats
      function updateStats() {
        const workSessions = timerState.sessions.filter(s => s.type === 'Work').length;
        totalSessionsDisplay.textContent = workSessions;
        
        const totalMinutes = timerState.sessions.reduce((sum, s) => sum + (s.duration / 60), 0);
        totalMinutesDisplay.textContent = Math.floor(totalMinutes);
      }

      // Update session history
      function updateSessionHistory() {
        if (timerState.sessions.length === 0) {
          sessionHistoryDiv.innerHTML = '<p class="text-muted text-center">No sessions completed yet</p>';
          return;
        }

        sessionHistoryDiv.innerHTML = timerState.sessions.map((session, idx) => `
          <div class="session-item">
            <div>
              <div><strong>${session.type}</strong></div>
              <div class="session-date">${session.time}</div>
            </div>
            <div class="session-time">${session.duration} min</div>
          </div>
        `).join('');
      }

      // Event listeners
      startBtn.addEventListener('click', startTimer);
      pauseBtn.addEventListener('click', pauseTimer);
      resetBtn.addEventListener('click', resetTimer);

      workDurationInput.addEventListener('change', (e) => {
        timerState.workDuration = parseInt(e.target.value) * 60;
        if (!timerState.isRunning && timerState.isWorkSession) {
          timerState.timeRemaining = timerState.workDuration;
          updateDisplay();
        }
      });

      breakDurationInput.addEventListener('change', (e) => {
        timerState.breakDuration = parseInt(e.target.value) * 60;
        if (!timerState.isRunning && !timerState.isWorkSession) {
          timerState.timeRemaining = timerState.breakDuration;
          updateDisplay();
        }
      });

      longBreakDurationInput.addEventListener('change', (e) => {
        timerState.longBreakDuration = parseInt(e.target.value) * 60;
      });

      // Initialize
      updateDisplay();
      
      // Request notification permission
      if ('Notification' in window && Notification.permission === 'default') {
        Notification.requestPermission();
      }
    </script>
  </body>
</html>
